// Form iwith new controller




// Defined FunCtrl 
div#funstuff(ng-controller="FunCtrl")
	form#createAndShare(ng-controller="CreateAndShare", ng-submit='saveGem(gem)')
		{{gem}}
		form#gemInfo.hide
			ul#fields(ng-repeat="gems in profileMap.0001")
				ul
					li(ng-repeat="field in gems") 
						{{field.field_name}} 
						input(type="text", name="{{field.field_id}}", id="{{field.field_id}}", ng-model='gem.data[field.field_id]')
					input(type="submit", value="Submit", style="width:100px; height:20px;").btn.btn-small.btn-primary Save

	div.funstuff
		input(type="text", ng-model="SearchTerm", placeholder="Search your contacts") // Defined Model (that is used in Filter)
		ul#contacts
			li(ng-repeat="contact in mycontacts | filter:SearchTerm | orderBy:'metadata.email'").span2
				
				div.row-fluid
						
						img(src="https://demo.personal.com/avatar/{{contact | avatarId}}%23avatar?size=120")
						br
						strong {{contact.metadata.email[0]}} 
						br
						small.muted +3976431231231
						br
						small.muted
							i.icon-map-marker
							i.icon-envelope-alt
							i.icon-phone-sign
							i.icon-facebook-sign
							i.icon-linkedin-sig
						ul
							li(ng-repeat="gem in mygems | mineGem:contact")
									strong {{gem.info.gem_instance_name}}
									br
									ul
										li(ng-repeat="gemData in gem.data")
											{{gemData}}

